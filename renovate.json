{
  "extends": ["config:base"],
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "gitAuthor": "Renovate Bot <renovate-bot@ruter.no>",
  "ignoreDeps": [],
  "ignorePaths": [],
  "labels": ["Renovate"],
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": false
  },
  "rangeStrategy": "pin",
  "gitLabIgnoreApprovals": true,
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch"],
      "matchCurrentVersion": "!/^0/",
      "automerge": false
    }
  ],
  "minimumReleaseAge": "5 days",
  "internalChecksFilter": "strict"
}
